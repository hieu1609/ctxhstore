<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <include layout="@layout/toolbar_product"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Xem đơn hàng"
        android:textColor="#E6000000"
        android:textSize="35sp"
        android:textStyle="bold" />

            <Button
                android:background="@color/colorInformation"
                android:id="@+id/received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="start"
                android:padding="10dp"
                android:text="Đơn hàng đã đặt"
                android:textSize="15dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textAlignment="textStart" />
            <Button
                android:id="@+id/comfirm"
                android:background="@color/colorInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:padding="10dp"
                android:text="Đơn hàng đã xác nhận"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:gravity="start"
                android:textSize="15sp" />


                <Button
                    android:id="@+id/shipping"
                    android:background="@color/colorInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:padding="10dp"
                    android:text="Đơn hàng đang vận chuyển"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textSize="15dp" />

            <Button
                android:id="@+id/completed"
                android:background="@color/colorInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:padding="10dp"
                android:text="Đơn hàng đã hoàn thành"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:gravity="start"
                android:textSize="15dp"
                android:layout_marginBottom="30dp"
                />

    </LinearLayout>

</LinearLayout>