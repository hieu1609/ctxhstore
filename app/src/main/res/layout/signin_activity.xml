<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignInActivity">
    <include layout="@layout/toolbar_product"/>
    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/relativelayout"
        android:background="#80ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ctxh"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/logosignin"/>
        <TextView
            android:id="@+id/text"
            android:textSize="30dp"
            android:textColor="#CC000000"
            android:text="Đăng Nhập"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logosignin"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="15dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edittext"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/textemail"
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Email"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="#BB000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edittext1"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/textpassword"
                android:layout_margin="5dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:drawableTint="#BB000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/confirmbutton"
            android:layout_below="@id/edittext1"
            android:background="@color/colorInformation"
            android:alpha="0.8"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:textSize="15dp"
            android:text="Xác nhận"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/resetpass"
            android:gravity="center"
            android:layout_below="@id/confirmbutton"
            android:layout_marginHorizontal="25dp"
            android:layout_alignParentLeft="true"
            android:drawableBottom="@drawable/button_top_bottom1"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:textSize="15dp"
            android:text="Quên mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/signupbutton"
            android:layout_below="@id/confirmbutton"
            android:layout_alignParentRight="true"
            android:background="@color/colorInformation"
            android:alpha="0.8"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="10dp"
            android:layout_marginHorizontal="25dp"
            android:textSize="15dp"
            android:text="Đăng ký"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
