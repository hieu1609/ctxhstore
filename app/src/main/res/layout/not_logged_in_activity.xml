<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.NotLoggedInActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarnotlogged"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorInformation"
        app:title="Thông tin người dùng"
        app:titleTextColor="#ffffff">
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@id/toolbarnotlogged"
        android:background="#1f0FA092"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="255dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/border2"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="CTXH STORE"
            android:textColor="#E6ffffff"
            android:textSize="30sp"

            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_marginLeft="3dp"
            android:layout_height="150dp"
            android:layout_below="@id/text"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:background="#F5F5DC"
            android:orientation="horizontal">
            <Button
                android:id="@+id/login"
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:background="@drawable/border4"
                android:padding="10dp"
                android:text="Đăng nhập" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_toRightOf="@id/relativelayout1"
                android:layout_width="@android:dimen/thumbnail_width"
                android:layout_height="150dp"
                android:layout_below="@id/text"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:background="#F5F5DC">

                <Button
                    android:id="@+id/register"
                    android:layout_width="350px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border4"
                    android:padding="10dp"
                    android:text="Đăng ký" />


            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>