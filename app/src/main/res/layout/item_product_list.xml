<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:background="@drawable/white_light_rect">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgv_lvi_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgv_lvi_product">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten san pham"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/tv1_lvi_product"
                android:textColor="@color/colorProductName"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1_lvi_product"
                android:id="@+id/rv_product">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="16dp"
                    android:text="price"
                    android:id="@+id/tv2_lvi_product"
                    android:textColor="@color/colorPrice"
                    android:layout_centerVertical="true"/>
                <RatingBar
                    android:id="@+id/rb_lvi_product"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:numStars="5" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_product"
                android:textSize="16dp"
                android:text="description"
                android:layout_centerVertical="true"
                android:id="@+id/tv3_lvi_product"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>